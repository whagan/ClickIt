<?xml version="1.0" encoding="UTF-8"?>
<odoo>

         <record model="ir.ui.view" id="custom_reports_view_1">
            <field name="model">res.partner</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <custom_reports display_contacts="1" >
                </custom_reports>
            </field>
        </record>

       

        <record model="ir.actions.act_window" id="first_custom_reports_view">
            <field name="name">Custom Reports</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">custom_reports</field>
            <field name="view_id" ref="custom_reports_view_1"/>
        </record>


        <menuitem id="main_custom_reports_menu" name="Custom Reports"/>

        <menuitem id="custom_reports_submenu" name="Custom Reports"
                  parent="main_custom_reports_menu"/>
        
         <menuitem id="custom_reports_configure_submenu" name="Configure"
                  parent="main_custom_reports_menu"/>

        <menuitem id="open_view" name="Employee Performance" parent="custom_reports_submenu"
                  action="first_custom_reports_view"/>
        
</odoo>