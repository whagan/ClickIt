<?xml version="1.0" encoding="UTF-8"?>
<odoo>

 <!-- sales by location action -->
    <record id="sales_by_location_action" model="ir.actions.act_window">
        <field name="name">Sales By Location</field>
        <field name="res_model">custom_reports.sales_by_location</field>
        <field name="view_mode">tree,pivot</field>
    </record>
    

      <!-- pivot -->
    <record model="ir.ui.view" id="sales_by_location_pivot">
        <field name="name">Sales by Location Report</field>
        <field name="model">custom_reports.sales_by_location</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="company" type="row"/>
                <field name="total_sales" type="col"/>
            </pivot>
        </field>
    </record>
    
    <!-- sales by location tree -->
     <record model="ir.ui.view" id="sales_by_location_view_tree">
        <field name="name">Sales By Location</field>
        <field name="model">custom_reports.sales_by_location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company"/>
                <field name="total_sales"/>
            </tree>
        </field>
    </record>





    <!-- odoo action -->
    <record model="ir.actions.act_window" id="sales_by_location_report_action" >
        <field name="name">Sales By Location Report</field>
        <field name="res_model">custom_reports.sales_by_location_report</field>
        <field name="view_mode">tree,form</field>

    </record>

    <!-- tree -->
    <record model="ir.ui.view" id="sales_by_location_report_view_tree">
        <field name="name">Sales By Location Report</field>
        <field name="model">custom_reports.sales_by_location_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>
 

       <!-- form -->
    <record model="ir.ui.view" id="sales_by_location_report_view_form">
        <field name="name">Sales By Location Report</field>
        <field name="model">custom_reports.sales_by_location_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>Sales By Location</h1>
                        </div>
                        <group>
                            <div>
                                <label class="oe_input_label" for="name" string="Start Date:" style="font-weight:bold"/>
                                <field name="start_date"/>
                            </div>
                            <div>
                                <label class="oe_input_label" for="name" string="End Date:" style="font-weight:bold"/>
                                <field name="end_date"/>
                            </div>
                        </group>
                        <div>
                            <label class="oe_input_label" for="name" string="Companys" style="font-weight:bold"/>
                            <field name="company_ids" widget="many2many_tags"/>
                        </div>
                        

                    </group>
                    <notebook>
                        <page name="Sales By Locaiton " string="Sales By Location">
                            <field name="sales_by_location_ids">
                                <pivot>
                                    <field name="company" type ="row"/>
                                    <field name="total_sales" type ="col"/>
                                </pivot>
                            </field>  
                            
                        </page>
                    </notebook>
                </sheet>    
            </form>
        </field>
    </record>
</odoo>