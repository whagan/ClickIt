<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo action -->
    <record id="employee_performance_report_action" model="ir.actions.act_window">
        <field name="name">Employee Performance</field>
        <field name="res_model">custom_reports.employee_performance_report</field>
        <field name="view_mode">tree,graph</field>

    </record>

    <!-- tree -->
    <record model="ir.ui.view" id="employee_performance_report_view_tree">
        <field name="name">custom_reports.employee_performance_report.tree</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="work_period"/>
                <field name="employee"/>
                <field name="sales"/>
            </tree>
        </field>
    </record>

    <!-- graph
    <record model="ir.ui.view" id="employee_performance_report_view_graph_bar">
        <field name="name">custom_reports.employee_performance_report.graph_bar</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <graph string="Employee" type="bar">
                <field name="employee" type="row"/>
                <field name="sales" type="measure"/>
            </graph>
        </field>
    </record>
    -->
    <!-- graph -->
    <record model="ir.ui.view" id="employee_performance_report_view_graph_pie">
        <field name="name">custom_reports.employee_performance_report.graph_pie</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <graph string="Employee" type="pie">
                <field name="employee" type="row"/>
                <field name="sales" type="measure"/>
            </graph>
        </field>
    </record>


</odoo>