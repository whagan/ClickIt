<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo action -->
    <record id="employee_performance_report_action" model="ir.actions.act_window">
        <field name="name">Employee Performance</field>
        <field name="res_model">custom_reports.employee_performance_report</field>
        <field name="view_mode">tree,form</field>

    </record>

    <!-- tree -->
    <record model="ir.ui.view" id="employee_performance_report_view_tree">
        <field name="name">custom_reports.employee_performance_report.tree</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="worked_hours"/>
            </tree>
        </field>
    </record>

     <!-- tree -->
    <record model="ir.ui.view" id="employee_performance_report_view_form">
        <field name="name">custom_reports.employee_performance_report.form</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <form>
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
               

            </form>
        </field>
    </record>
