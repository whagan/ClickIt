<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   
    <!-- employee performance action -->
    <record model="ir.actions.act_window" id="employee_performance_action">
        <field name="name">Employee Performance</field>
        <field name="res_model">custom_reports.employee_performance</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <!-- employee performance tree -->
    <record model="ir.ui.view" id="employee_performance_view_tree">
        <field name="name">Employee Performance</field>
        <field name="model">custom_reports.employee_performance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="total_sales"/>
                <field name="worked_hours"/>
                <field name="sales_hour"/>
            </tree>
        </field>
    </record>

    <!-- employee performance form -->
    <record model="ir.ui.view" id="employee_performance_view_form">
        <field name="name">Employee Performance</field>
        <field name="model">custom_reports.employee_performance</field>
        <field name="arch" type="xml">
            <form>
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </form>
        </field>
    </record>

    <!-- employee performance pivot -->
    <record model="ir.ui.view" id="employee_performance_view_pivot">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="employee_id" type="row"/>
                <field name="worked_hours" type="col"/>
                <field name="total_sales" type="col"/>
                <field name="sales_hour" type="col"/>
            </pivot>
        </field>
    </record>

     <!-- employee performance reports action -->
    <record model="ir.actions.act_window" id="employee_performance_report_action" >
        <field name="name">Employee Performance Report</field>
        <field name="res_model">custom_reports.employee_performance_report</field>
        <field name="view_mode">tree,form</field>
    </record>

    
    <!-- employee performance report tree -->
    <record model="ir.ui.view" id="employee_performance_report_view_tree">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="report_title"/>
            </tree>
        </field>
    </record>

    <!-- employee performance report form -->
    <record model="ir.ui.view" id="employee_performance_report_view_form">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>Employee Performance Report</h1>
                        </div>
                    </group>
                    <group>
                        <div>
                            <label class="oe_input_label" for="name" string="Report Title" style="font-weight:bold"/>
                            <field name="report_title"/>
                        </div>
                    </group>
                    <group>
                        <div>
                            <label class="oe_input_label" for="name" string="Start Date:" style="font-weight:bold"/>
                            <field name="start_date"/>
                        </div>
                        <div>
                            <label class="oe_input_label" for="name" string="End Date:" style="font-weight:bold"/>
                            <field name="end_date"/>
                        </div>
                    </group>
                    <group>
                        <div>
                            <label class="oe_input_label" for="name" string="Employees" style="font-weight:bold"/>
                            <field name="employee_ids" widget="many2many_tags" domain="[('user_id', '!=', False)]"/>
                        </div>
                    </group>
                    <field name="id" invisible="1"/>
                    <notebook attrs="{'invisible': [('id', '=', False)]}">
                        <page string="Pivot">
                            <field name="employee_performance_ids">
                                <pivot>
                                    <field name="employee_id" type="row"/>
                                    <field name="worked_hours" type="col"/>
                                    <field name="total_sales" type="col"/>
                                    <field name="sales_hour" type="col"/>
                                </pivot>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- employee performance graph form view -->
    <record id="employee_performance_report_view_form_graph" model="ir.ui.view">
        <field name="name">Employee Performance Report Graph Form</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="inherit_id" ref="custom_reports.employee_performance_report_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Graph">
                    <field name="employee_performance_graph" widget="employee_performance_graph"
						title="Employee Performances" 
						options="{'graph_type': 'bar'}"/>
                </page>
            </xpath>
        </field>
    </record> 

</odoo>

