<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo action -->
    <record id="employee_performance_report_action" model="ir.actions.act_window">
        <field name="name">Employee Performance Report</field>
        <field name="res_model">custom_reports.employee_performance_report</field>
        <field name="view_mode">tree,graph,form</field>

    </record>

    <!-- tree -->
    <record model="ir.ui.view" id="employee_performance_report_view_tree">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

     <!-- form -->
    <record model="ir.ui.view" id="employee_performance_report_view_form">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>Employee Performance Report</h1>
                    </div>
                    <div>
                        <label class="oe_input_label" for="name" string="Start Date" />
                        <field name="start_date"/>
                    </div>
                    <div>
                        <label class="oe_input_label" for="name" string="End Date" />
                        <field name="end_date"/>
                    </div>
                    <div>
                        <label class="oe_input_label" for="name" string="Employees" />
                        <field name="employee_ids" widget="many2many_tags"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>