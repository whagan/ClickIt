<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo action -->
    <record id="employee_performance_report_action" model="ir.actions.act_window">
        <field name="name">Employee Performance Report</field>
        <field name="res_model">custom_reports.employee_performance_report</field>
        <field name="view_mode">tree,form</field>

    </record>

    <!-- tree -->
    <record model="ir.ui.view" id="employee_performance_report_view_tree">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

     <!-- form -->
    <record model="ir.ui.view" id="employee_performance_report_view_form">
        <field name="name">Employee Performance Report</field>
        <field name="model">custom_reports.employee_performance_report</field>
        <field name="arch" type="xml">
            <form>
                <field name="start_date"/>
                <field name="end_date"/>
            </form>
        </field>
    </record>

    <!--********************************************************************-->
    
    
    <menuitem id="employee_performance_menu" name="Employee Performance" parent="custom_reports_submenu" action="custom_reports.employee_performance_action"/>

</odoo>