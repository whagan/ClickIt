<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo action -->
    <record id="custom_reports_action" model="ir.actions.act_window">
        <field name="name">Custom Reports</field>
        <field name="res_model">custom_reports.custom_report</field>
        <field name="view_mode">custom_reports</field>
    </record>
    
    <!-- navbar title -->
    <menuitem id="custom_reports_menu" name="Custom Reports"/>

    <!-- submenus -->
    <menuitem id="custom_reports_submenu" name="Custom Reports" parent="custom_reports_menu"/>
    <menuitem id="configure_submenu" name="Configure" parent="custom_reports_menu"/>

    <!-- submenu list items -->
    <menuitem id="cr_open_view" name="Employee Performance" parent="custom_reports_submenu" action="custom_reports_action"/>
    <menuitem id="co_open_view" name="Configure" parent="configure_submenu" action="custom_reports_action"/>
    
