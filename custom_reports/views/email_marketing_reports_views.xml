<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- odoo action -->
    <record model="ir.actions.act_window" id="email_marketing_report_action" >
        <field name="name">Email Marketing Report</field>
        <field name="res_model">custom_reports.email_marketing_report</field>
        <field name="view_mode">tree,form</field>
    </record>

   

    <!-- tree -->
    <record model="ir.ui.view" id="email_marketing_report_view_tree">
        <field name="name">Email Marketing Report</field>
        <field name="model">custom_reports.email_marketing_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
        </field>
    </record>

    <!-- form -->
    <record model="ir.ui.view" id="email_marketing_report_view_form">
        <field name="name">Email Marketing Report</field>
        <field name="model">custom_reports.email_marketing_report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>Email Marketing Report</h1>
                        </div>
                        <group>
                            <div>
                                <label class="oe_input_label" for="name" string="Start Date:" style="font-weight:bold"/>
                                <field name="start_date"/>
                            </div>
                            <div>
                                <label class="oe_input_label" for="name" string="End Date:" style="font-weight:bold"/>
                                <field name="end_date"/>
                            </div>
                        </group>
                    </group>

                    <notebook>
                        <page string="Email Marketing Pivot">
                            
                            <pivot>
                                <field name="start_date" type="row"/>
                                <field name="end_date" type="col"/>
                            </pivot>
                            
                        </page>
                        <page string="Email Marketing Graph">
                            <pivot>
                                <field name="start_date" type="row"/>
                                <field name="end_date" type="col"/>
                            </pivot>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>


</odoo>