
<odoo>

    <record model="ir.actions.act_window" id="reports_list_action">
        <field name="name">Reports</field>
        <field name="res_model">reports.report</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Generate first report</p>
        </field>
    </record>

    <menuitem id="main_reports_menu" name="Reports" groups = "group_manager"/>
    

    <menuitem id="reports_menu" name="Reports" groups="group_manager" parent="main_reports_menu"/>
        

    <menuitem id="report_menu" name="Employee Performance" parent="reports_menu" groups="group_manager" action="reports_list_action"/>
    
</odoo>